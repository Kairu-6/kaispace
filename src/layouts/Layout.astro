---
const { title, showFooter = true, showNavbar = true, inPortfolio = false } = Astro.props;
import '../styles/global.css'
import Navbar from '../components/portfolio/Navbar.astro';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Data Analytics & Security Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/ks.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
  </head>
  
  <body class="bg-white text-black selection:bg-black selection:text-white overflow-x-hidden flex flex-col min-h-screen">
    
    {showNavbar && <Navbar inPortfolio={inPortfolio} />}

    <main class={`flex-grow ${showNavbar ? 'pt-16' : ''}`}>
      <slot /> 
    </main>

    {showFooter && (<footer class="bg-black text-gray-500 py-8 border-t border-gray-900 text-center">
      <div class="max-w-6xl mx-auto px-6">
        <p class="text-[10px] uppercase tracking-[0.3em] font-bold mb-2">KaiSpace</p>
        
      </div>
    </footer>)}

  </body>
</html>

<style is:global>
  :root {
    --accent: 0, 0, 0;
  }
  html {
    font-family: 'Inter', sans-serif;
    background: #ffffff;
  }
  body {
    margin: 0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>