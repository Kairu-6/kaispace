---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;

const formattedDate = new Date(frontmatter.pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: '2-digit',
});
---
<Layout title={frontmatter.title} inPortfolio={false}>
  <div class="max-w-6xl mx-auto px-6 py-12">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-black">{frontmatter.title}</h1>
      <p class="text-gray-500 mt-2">{formattedDate}</p>
    </header>

    <div class="blog-content">
      <slot />
    </div>
  </div>
</Layout>

<style is:global>
  .blog-content {
    color: #374151; 
    line-height: 1.8;
    font-size: 1.125rem;
    max-width: 48rem; 
    margin: 0 auto;
  }

  .blog-content p {
    margin-bottom: 1.75rem;
  }

  .blog-content strong {
    color: #000000;
    font-weight: 700;
  }

  .blog-content a {
    color: #000000;
    text-decoration: underline;
    text-underline-offset: 4px;
    font-weight: 600;
    transition: opacity 0.2s;
  }

  .blog-content a:hover {
    opacity: 0.7;
  }

  .blog-content h1, 
  .blog-content h2, 
  .blog-content h3, 
  .blog-content h4 {
    color: #000000;
    font-weight: 800;
    letter-spacing: -0.025em;
    margin-top: 3.5rem;
    margin-bottom: 1.25rem;
    line-height: 1.2;
  }

  .blog-content h1 { font-size: 2.5rem; }
  .blog-content h2 { font-size: 1.875rem; }
  .blog-content h3 { font-size: 1.5rem; }
  .blog-content h4 { font-size: 1.25rem; }

  .blog-content ul, 
  .blog-content ol {
    margin-bottom: 1.75rem;
    padding-left: 1.5rem;
  }

  .blog-content ul { list-style-type: disc; }
  .blog-content ol { list-style-type: decimal; }

  .blog-content li {
    margin-bottom: 0.5rem;
  }

  .blog-content blockquote {
    border-left: 4px solid #000000;
    padding-left: 1.5rem;
    font-style: italic;
    margin: 2.5rem 0;
    color: #4b5563;
  }

  .blog-content pre {
    background-color: #000000;
    color: #ffffff;
    padding: 1.5rem;
    border-radius: 0.75rem;
    margin: 2rem 0;
    overflow-x: auto;
    border: 1px solid #1f2937;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.95rem;
  }

  .blog-content code:not(pre code) {
    background-color: #f3f4f6; 
    color: #111827; 
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
    border: 1px solid #e5e7eb;
  }

  .blog-content img {
    border-radius: 1rem;
    margin: 2.5rem auto;
    display: block;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  .blog-content hr {
    margin: 4rem 0;
    border: 0;
    border-top: 1px solid #e5e7eb;
  }
</style>