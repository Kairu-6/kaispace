---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Sign In | KaiSpace">
  <section class="min-h-[80vh] flex items-center justify-center px-6">
    <div class="max-w-md w-full">
      <div class="text-center mb-10">
        <h1 class="text-4xl font-black tracking-tighter uppercase mb-2">Welcome Back</h1>
        <p class="text-gray-500 font-medium">Enter your credentials to access your space.</p>
      </div>

      <form id="login-form" class="space-y-4">
        <div>
          <label class="block text-[10px] font-black uppercase tracking-[0.2em] text-gray-400 mb-2 ml-1">Email Address</label>
          <input type="email" id="email" required 
            class="w-full px-5 py-4 bg-gray-50 border-none rounded-2xl focus:ring-2 focus:ring-black transition-all outline-none font-medium" 
            placeholder="name@example.com" />
        </div>
        
        <div>
          <label class="block text-[10px] font-black uppercase tracking-[0.2em] text-gray-400 mb-2 ml-1">Password</label>
          <input type="password" id="password" required 
            class="w-full px-5 py-4 bg-gray-50 border-none rounded-2xl focus:ring-2 focus:ring-black transition-all outline-none font-medium" 
            placeholder="••••••••" />
        </div>

        <button type="submit" 
          class="w-full bg-black text-white font-black py-5 rounded-2xl uppercase tracking-[0.2em] text-xs hover:bg-gray-900 active:scale-[0.98] transition-all shadow-xl shadow-black/10">
          Authorize Session
        </button>
      </form>

      <div id="error-msg" class="hidden mt-6 p-4 bg-red-50 text-red-500 text-xs font-bold uppercase tracking-widest rounded-xl text-center">
        Invalid credentials. Please try again.
      </div>
    </div>
  </section>
</Layout>

<script>
  import { supabase } from '../lib/supabase';

  // Use a "DOMContentLoaded" or just ensure elements exist before adding listeners
  const form = document.getElementById('login-form') as HTMLFormElement;
  const errorMsg = document.getElementById('error-msg') as HTMLDivElement;

  if (form && errorMsg) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Clear previous errors
      errorMsg.classList.add('hidden');
      
      const emailInput = document.getElementById('email') as HTMLInputElement;
      const passwordInput = document.getElementById('password') as HTMLInputElement;

      const { error } = await supabase.auth.signInWithPassword({ 
        email: emailInput.value, 
        password: passwordInput.value 
      });

      if (error) {
        errorMsg.textContent = error.message;
        errorMsg.classList.remove('hidden');
      } else {
        window.location.href = '/';
      }
    });
  }
</script>