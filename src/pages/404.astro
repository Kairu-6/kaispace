---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found" showFooter={false} showNavbar={false}>
  <main class="flex flex-col items-center justify-center min-h-screen bg-black text-white px-4">
    <div class="relative group">
      <h1 class="text-9xl font-black text-gray-400">
        404
      </h1>
      
    </div>

    <div class="mt-8 max-w-lg w-full bg-zinc-900/50 border border-cyan-900/50 rounded-lg p-6 font-mono shadow-2xl shadow-cyan-900/20">
      <div class="flex gap-2 mb-4">
        <div class="w-3 h-3 rounded-full bg-red-500/50"></div>
        <div class="w-3 h-3 rounded-full bg-yellow-500/50"></div>
        <div class="w-3 h-3 rounded-full bg-cyan-500/50"></div>
      </div>
      
      <div class="space-y-2 text-sm md:text-base">
        <p class="text-cyan-500">$ <span class="text-white">fetch --path current_route</span></p>
        <p class="text-red-400">[ERROR] SEGMENTATION_FAULT</p>
        <p class="text-zinc-500">// The pointer for this route leads to unallocated memory.</p>
        <p class="text-zinc-400 mt-4">Traceback (most recent user action):</p>
        <p class="text-zinc-500">  File "kaispace.my", line 404, in &lt;module&gt;</p>
        <p class="text-white">  RuntimeError: Page "{Astro.url.pathname}" not found.</p>
      </div>
    </div>

    <div class="mt-12 flex flex-col sm:flex-row gap-4">
      <a 
        href="/" 
        class="px-8 py-3 bg-cyan-600 hover:bg-cyan-500 text-black font-bold rounded-md transition-all transform hover:scale-105"
      >
        RETURN HOME
      </a>
      <a 
        href="/portfolio" 
        class="px-8 py-3 border border-cyan-800 hover:border-cyan-400 text-cyan-400 font-mono rounded-md transition-all"
      >
        cd /portfolio
      </a>
    </div>
  </main>
</Layout>

<style>
  /* Subtle Scanline Effect for that 90s Cyberpunk feel */
  main::before {
    content: " ";
    display: block;
    position: absolute;
    top: 0; left: 0; bottom: 0; right: 0;
    background: linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.25) 50%), linear-gradient(90deg, rgba(255, 0, 0, 0.06), rgba(0, 255, 0, 0.02), rgba(0, 0, 255, 0.06));
    z-index: 2;
    background-size: 100% 2px, 3px 100%;
    pointer-events: none;
  }
</style>