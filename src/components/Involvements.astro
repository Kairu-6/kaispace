---
import { supabase, owner_id } from '../lib/supabase';

// Fetch involvements ordered by status (Current first) then by start date
const { data: involvements, error } = await supabase
  .from('involvements')
  .select('*')
  .eq('user_id', owner_id)
  .order('is_active', { ascending: false })
  .order('start_date', { ascending: false })
  .limit(4);

if (error) {
  console.error("Error fetching involvements:", error.message);
}
---

<section class="py-24 bg-white" id="involvements">
  <div class="max-w-4xl mx-auto px-6">
    <div class="mb-16">
      <h2 class="text-4xl font-black text-black tracking-tighter">Involvement & Leadership</h2>
      <p class="text-gray-500 mt-2 text-lg">Roles, volunteering, and community impact.</p>
    </div>

    <div class="space-y-12">
      {involvements && involvements.map((item) => (
        <div class="group flex flex-col md:flex-row items-start gap-y-6 md:gap-x-6 pb-10 border-b border-gray-100 last:border-0">

          <div class="shrink-0 pt-1">
            <p class="text-sm font-bold text-gray-600 font-mono">
              <span class="md:block">
                {new Date(item.start_date).toLocaleString('default', { month: 'short', year: 'numeric' })}
              </span>
              <span class="md:hidden"> â€” </span>
              <span class="md:block mt-0.5">
                {item.is_active
                  ? 'Present'
                  : new Date(item.end_date).toLocaleString('default', { month: 'short', year: 'numeric' })
                }
              </span>
            </p>
          </div>

          <div class="flex-1 mr-4">
            <div class="flex flex-wrap items-center gap-2 mb-1">
              <h3 class="text-2xl font-bold text-black group-hover:text-gray-700 transition-colors">
                {item.role}
              </h3>
              {item.is_active && (
                <span class="bg-black text-white text-[10px] font-black px-2 py-0.5 rounded uppercase tracking-tighter">
                  Active
                </span>
              )}
            </div>
            <p class="text-lg font-medium text-gray-500 mb-4">{item.organization}</p>
            <p class="text-gray-600 leading-relaxed text-base max-w-2xl">
              {item.description}
            </p>
          </div>

          {item.image_url && (
            <div class="shrink-0 rounded-2xl overflow-hidden bg-gray-50 shadow-md border border-gray-100">
              <img
                src={item.image_url}
                alt={`${item.organization} logo`}
                class="w-full h-48 md:w-64 md:h-48 object-cover"
              />
            </div>
          )}

        </div>
      ))}
    </div>
  </div>
</section>