---
import { supabase } from '../lib/supabase';

// Fetch profile data
const { data: profile } = await supabase
  .from('profiles')
  .select('specialization, github_url, linkedin_url')
  .single();

const displayUrl = (url: string) => url?.replace(/^https?:\/\//, '');
---

<section class="py-24 bg-black text-white" id="contact">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-start">
      
      <div class="space-y-8">
        <div>
          <h2 class="text-5xl font-black tracking-tighter mb-4">Let's build<br/>something great.</h2>
          <p class="text-gray-400 text-lg max-w-md">
            Currently focusing on 
            <span class="text-white font-bold bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent border-b border-white/10">
              {profile?.specialization || 'Data Analytics and Low-Level Security'}
            </span>. 
            Reach out for collaborations or just to connect.
          </p>
        </div>

        <div class="space-y-6">
          <div class="group flex items-center gap-4">
            <div class="w-12 h-12 rounded-full border border-gray-800 flex items-center justify-center group-hover:bg-white group-hover:text-black transition-all">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
            </div>
            <div>
              <p class="text-xs font-bold text-gray-500 uppercase tracking-widest">LinkedIn</p>
              <a href={profile?.linkedin_url} target="_blank" class="font-medium hover:text-blue-400 transition-colors">
                {displayUrl(profile?.linkedin_url) || 'linkedin.com/in/username'}
              </a>
            </div>
          </div>

          <div class="group flex items-center gap-4">
            <div class="w-12 h-12 rounded-full border border-gray-800 flex items-center justify-center group-hover:bg-white group-hover:text-black transition-all">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.28 1.15-.28 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
            </div>
            <div>
              <p class="text-xs font-bold text-gray-500 uppercase tracking-widest">GitHub</p>
              <a href={profile?.github_url} target="_blank" class="font-medium hover:text-gray-400 transition-colors">
                {displayUrl(profile?.github_url) || 'github.com/username'}
              </a>
            </div>
          </div>
        </div>
      </div>

      <form class="bg-gray-900/50 p-8 rounded-3xl border border-gray-800 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-2">
            <label class="text-xs font-bold text-gray-400 uppercase ml-1">Name</label>
            <input name="name" type="text" placeholder="Syam" class="w-full bg-black border border-gray-800 p-4 rounded-xl focus:outline-none focus:border-white transition-all text-white placeholder:text-gray-700" />
          </div>
          <div class="space-y-2">
            <label class="text-xs font-bold text-gray-400 uppercase ml-1">Email</label>
            <input name="email" type="email" placeholder="syam@example.com" class="w-full bg-black border border-gray-800 p-4 rounded-xl focus:outline-none focus:border-white transition-all text-white placeholder:text-gray-700" />
          </div>
        </div>
        <div class="space-y-2">
          <label class="text-xs font-bold text-gray-400 uppercase ml-1">Message</label>
          <textarea name="message" rows="5" placeholder="Hi, I would like to..." class="w-full bg-black border border-gray-800 p-4 rounded-xl focus:outline-none focus:border-white transition-all text-white placeholder:text-gray-700 resize-none"></textarea>
        </div>
        <button type="submit" class="w-full bg-white text-black font-black py-4 rounded-xl hover:bg-gray-200 hover:scale-[1.01] transition-all uppercase">
          Send Message
        </button>
      </form>

    </div>
  </div>
</section>