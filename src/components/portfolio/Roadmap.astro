---
import { supabase, owner_id } from "../../lib/supabase";

const { data: roadmapItems, error } = await supabase
  .from('roadmap')
  .select('*')
  .eq('user_id', owner_id)
  .order('order_index', {ascending: true})
  .limit(6)
---

<section class="py-24 bg-gray-50 overflow-hidden" id="roadmap">
  <div class="text-center mb-20">
      <h2 class="text-4xl font-black tracking-tight uppercase text-black">
        Roadmap & History
      </h2>
    </div>
  <div class="max-w-6xl mx-auto px-6 relative">
    
    <div class="absolute left-6 md:left-1/2 top-0 bottom-0 w-0.5 bg-black transform md:-translate-x-1/2"></div>

    <div class="space-y-12">
      {roadmapItems?.map((item, index) => (
        <div class={`relative flex items-center justify-between w-full ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
          
          <div class="hidden md:block w-[42%]"></div>

          <div class="absolute left-6 md:left-1/2 transform -translate-x-1/2 z-20 flex items-center justify-center bg-black w-4 h-4 rounded-full border-4 border-white shadow-sm"></div>

          <div class="w-full ml-12 md:ml-0 md:w-[42%] bg-white rounded-2xl border border-gray-100 shadow-sm p-6 hover:shadow-md transition-shadow">
            <span class="text-[15px] font-bold text-gray-400 font-mono tracking-widest uppercase">
              {item.date_label}
            </span>
            <h3 class="text-xl font-black mt-1 text-black leading-tight">
              {item.title}
            </h3>
            <p class="text-gray-600 mt-2 text-sm leading-relaxed">
              {item.description}
            </p>
          </div>
          
        </div>
      ))}
    </div>
  </div>
</section>