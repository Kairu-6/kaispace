---
import { supabase } from '../lib/supabase';

// Fetch projects from the database
const { data: projects, error } = await supabase
  .from('projects')
  .select('*')
  .order('created_at', { ascending: false });

if (error) {
  console.error("Could not fetch projects:", error.message);
}
---

<section class="py-24 bg-white" id="projects">
  <div class="max-w-6xl mx-auto px-6">
    <div class="mb-16">
      <h2 class="text-4xl font-black text-black tracking-tighter">Selected Work</h2>
      <p class="text-gray-500 mt-2">Live involvements pulled from Supabase.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      {projects && projects.map((project) => (
        <div class="group">
          <div class="relative overflow-hidden rounded-3xl bg-gray-100 aspect-video mb-6">
            <img 
              src={project.image_url} 
              alt={project.title} 
              class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
            />
          </div>
          <h3 class="text-2xl font-bold text-black mb-2">{project.title}</h3>
          <p class="text-gray-600 text-sm">{project.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>