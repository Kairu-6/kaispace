<nav class="fixed top-0 w-full z-50 bg-white/80 backdrop-blur-md border-b border-gray-100">
  <div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
    <a href="/" class="text-xl font-bold tracking-wide text-black">KaiSpace.</a>
    
    <div class="hidden md:flex gap-6 text-sm font-medium text-gray-600">
      <a href="#projects" class="hover:text-black transition-colors">Projects</a>
      <a href="#roadmap" class="hover:text-black transition-colors">Roadmap</a>
      <a href="#involvements" class="hover:text-black transition-colors">Involvements</a>
      <a href="#contact" class="hover:text-black transition-colors">Contact</a>
    </div>

    <div id="auth-button-container">
      <a href="/login" class="px-5 py-2 border-2 border-black text-xs font-black uppercase tracking-widest hover:bg-black hover:text-white transition-all rounded-full">
        Sign In
      </a>
    </div>
  </div>
</nav>

<script>
  import { supabase } from "../lib/supabase";

  const container = document.getElementById('auth-button-container');

  async function updateNav() {
    const { data: { session } } = await supabase.auth.getSession();

    if (session && container) {
      // Replace with Sign Out button
      container.innerHTML = `
        <button id="signout-btn" class="px-5 py-2 bg-black text-white text-xs font-black uppercase tracking-widest hover:bg-gray-800 transition-all rounded-full">
          Sign Out
        </button>
      `;

      // Add click listener to the new button
      document.getElementById('signout-btn')?.addEventListener('click', async () => {
        await supabase.auth.signOut();
        window.location.href = "/"; // Refresh and go home
      });
    }
  }

  updateNav();
</script>